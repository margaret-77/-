<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xmlns:mvc="http://www.springframework.org/schema/mvc"
xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd   
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="com.neusoft.controller" />
	<mvc:annotation-driven />  <!--  开启注解驱动 -->

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/" />
		<property name="suffix" value=".jsp" />
		
	</bean>
	
	<mvc:resources location="/resource/" mapping="resource/**"/>
	<mvc:resources location="/html/" mapping="html/**"/>
	<mvc:resources location="/images/" mapping="images/**"/>
	<mvc:resources location="/css/" mapping="css/**"/>
	<mvc:resources location="/img/" mapping="img/**"/>
	<mvc:resources location="/js1/" mapping="js1/**"/>
	<mvc:resources location="/frontDesk/" mapping="frontDesk/**"/>
	
	
	<mvc:resources location="/verification _code/" mapping="verification _code/**"/>
	<!--后台  -->
	<mvc:resources location="/backgroundDesk/img" mapping="backgroundDesk/**"/>
	<mvc:resources location="/backgroundDesk/" mapping="backgroundDesk/**"/>
	<mvc:resources location="/backgroundDesk/css" mapping="backgroundDesk/**"/>
	<mvc:resources location="/backgroundDesk/js" mapping="backgroundDesk/**"/>
	
</beans>